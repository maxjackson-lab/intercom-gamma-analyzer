# Local Development Environment Configuration
# Copy this file to .env for local testing

# Intercom API Configuration
INTERCOM_ACCESS_TOKEN=your_intercom_token_here
INTERCOM_WORKSPACE_ID=your_workspace_id_here
INTERCOM_BASE_URL=https://api.intercom.io
INTERCOM_API_VERSION=2.14

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=4000

# Anthropic/Claude API Configuration (Optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_MAX_TOKENS=4000

# Gamma API Configuration (Optional)
GAMMA_API_KEY=your_gamma_api_key_here
GAMMA_BASE_URL=https://gamma.app/api

# Canny API Configuration (NEW)
CANNY_API_KEY=your_canny_api_key_here
CANNY_BASE_URL=https://canny.io/api/v1
CANNY_TIMEOUT=30
CANNY_MAX_RETRIES=3

# Analysis Settings
DEFAULT_ANALYSIS_DAYS=30
MAX_CONVERSATIONS_PER_REQUEST=150
MIN_CONVERSATIONS_FOR_ANALYSIS=10

# Voice of Customer Settings
VOC_DEFAULT_AI_MODEL=openai
VOC_ENABLE_AI_FALLBACK=true
VOC_HISTORICAL_WEEKS=26
VOC_TOP_CATEGORIES_COUNT=10

# Output Settings
OUTPUT_DIRECTORY=outputs
LOG_LEVEL=INFO
LOG_FILE=intercom_analysis.log

# Text Analysis Settings
YAKE_LANGUAGE=en
YAKE_MAX_NGRAM_SIZE=3
YAKE_DEDUPLICATION_THRESHOLD=0.9
YAKE_NUM_KEYWORDS=20
YAKE_MIN_KEYWORD_LENGTH=3
